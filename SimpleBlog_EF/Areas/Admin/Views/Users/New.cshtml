﻿@model SimpleBlog_EF.Areas.Admin.ViewModels.UsersNew

<h1>New User</h1>

@Html.AntiForgeryToken()
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class=" form-group">
        @Html.LabelFor(f => f.Username)
        @Html.TextBoxFor(f => f.Username, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Email, new { @class = "form-control" })
        @Html.TextBoxFor(f => f.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Password, new { @class = "form-control" })
        @Html.PasswordFor(f => f.Password, new { @class = "form-control" })
    </div>

    @Html.Partial("_RoleEditor", Model.Roles)

    <input type="submit" value="Create User" class="btn btn-primary" />
    <a href="@Url.Action("index")">or Cancel</a>
                    }