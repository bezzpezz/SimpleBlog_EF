@using System.Web.Optimization

@{
    Layout = null;
}

@helper SelectedTabClass(string tabName){ 
        if(tabName == ViewBag.SelectedTab)
        {
            @: active
        }
    }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SimpleBlog Admin</title>

    @Styles.Render("~/admin/styles")
</head>
<body>
    <div class="container">
        <ul class="nav nav-pills">
            <li class="@SelectedTabClass("home")">
                @Html.ActionLink("Home", "Index", "Home", new { area = "admin"})
            </li>
            <li class="@SelectedTabClass("Users")">
                @Html.ActionLink("Users", "Index", "Users", new { area = "admin"})
            </li>
        </ul> 

        @RenderBody()
    </div>

    @Scripts.Render("~/scripts")
    @RenderSection("Scripts", false)
</body>
</html>
